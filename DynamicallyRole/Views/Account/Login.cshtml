@model DynamicallyRole.Models.LoginViewModel

<div>
	<h1 class="text-center text-primary">Login</h1>
	<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
		<div class="border p-2 rounded">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="username"></label>
				<div class="col-md-12">
					<input asp-for="username" class="form-control" />
					<span asp-validation-for="username" class="text-danger"></span>
				</div>
			</div>


			<div class="form-group">
				<label asp-for="Password"></label>
				<div class="col-md-12">
					<input asp-for="Password" class="form-control" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
			</div>

			<div class="form-group pt-2">
				<div class="col-md-12">
					<div class="custom-checkbox">
						<label asp-for="RememberMe">
							<input asp-for="RememberMe" />
							Remember Me
						</label>
					</div>
				</div>


			</div>




			<div class="form-group pt-3">
				<div class="col-md-6 offset-md-3">
					<button class="btn btn-success form-control" type="submit">Login</button>
				</div>
				<div class="row">
					<div class="col-6">
						<a asp-controller="Account" asp-action="Register">Register a new user</a>
					</div>
					<div class="col-6 text-end">
						<a asp-controller="Account" asp-action="ForgetPassword">Forget Password</a>
					</div>
				</div>
			</div>
		</div>

	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}